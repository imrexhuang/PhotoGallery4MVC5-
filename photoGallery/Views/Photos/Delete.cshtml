@model photoGallery.Models.Photo

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Photo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Album.AlbumName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Album.AlbumName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            Image Preview
        </dt>

        <dd>
            <img src="@(Url.Content("~/Content/PhotoGallery/" + @Html.DisplayFor(model => model.Album.AlbumName) + "/" + @Html.DisplayFor(model => model.ImageName) ))" class="img-responsive" />
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-info btn-small" /> |
            @photoGallery.Utility.Utility4photoGallery.bootstrapActionLink(null, "Back to Manage Photo", "Back to Manage Photo", "Manage", "Photos", "glyphicon-backward", null, null)
        </div>
    }
</div>
